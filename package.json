{
  "private": true,
  "scripts": {
    "build": "./scripts/build.sh",
    "deploy": "gh-pages -d build",
    "build+deploy": "npm-run-all build deploy"
  },
  "workspaces": [
    "packages/*"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "gh-pages": "^3.1.0",
    "lint-staged": "^10.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "yorkie": "^2.0.0"
  }
}
